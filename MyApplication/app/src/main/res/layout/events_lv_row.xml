<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">


    <FrameLayout
        android:id="@+id/fl_reporctcard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="70" >

        <ImageView
            android:id="@+id/events_lv_row_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fffff9"
            android:scaleType="fitXY"
            />


    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_weight="30"
        android:padding="8dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/events_lv_row_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/events_lv_row_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:text="Description"
            android:layout_below="@+id/events_lv_row_title"
            android:textSize="14sp"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/events_lv_row_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif-condensed"
            android:maxLines="1"
            android:text="Date"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/events_lv_row_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/events_lv_row_date"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="1"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"
            android:paddingLeft="10dp"
            android:text="time"
            android:textSize="12sp" />


    </RelativeLayout>

</LinearLayout>
